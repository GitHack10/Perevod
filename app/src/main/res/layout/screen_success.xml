<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:maxWidth="@dimen/one_column_tablet_width">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:background="@color/grey_1A1A1A"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/one_column_tablet_width">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/successImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="48dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_svg_success" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/successTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/payment_success_screen_message"
            android:textColor="@color/green"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/successImageView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>