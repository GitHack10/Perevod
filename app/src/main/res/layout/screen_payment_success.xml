<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <include
        android:id="@+id/paymentSuccessToolbar"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnPrintQr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentSuccessToolbar"
        app:layout_constraintWidth_max="@dimen/one_column_tablet_width">

        <ImageView
            android:id="@+id/ivQrCode"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:background="@drawable/bg_gradient_stroke"
            android:padding="32dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvAmountTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/payment_success_screen_amount_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_32"
            tools:text="Сумма для оплаты: 150₽" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrintQr"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="24dp"
        android:background="@drawable/bg_rounded_gradient_primary"
        android:clickable="false"
        android:enabled="false"
        android:text="@string/payment_success_screen_print"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/btnGoBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="@dimen/one_column_tablet_width" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoBack"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_rounded_24_grey"
        android:text="@string/payment_success_screen_back"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_max="@dimen/one_column_tablet_width" />

    <FrameLayout
        android:id="@+id/vLoading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_60"
        android:clickable="true"
        android:elevation="6dp"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentSuccessToolbar"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/white" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>